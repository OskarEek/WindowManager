<Window x:Class="WindowManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowManager"
        mc:Ignorable="d"
        Focusable="True"
        Title="MainWindow" Height="450" Width="800"
        Background="#95000000"
        Foreground="#E5E5E5"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column ="0" Grid.Row="0"
        Background = "Transparent"
        MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
        
        <Grid Grid.Row="0" Grid.Column="1">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column ="0"
                    Background = "Transparent"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
            
            <Grid Grid.Column="1">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Background="Gray"
                        Content="-"
                        FontWeight="Heavy"
                        Click="MinimizeProgramButton"/>

                <Button Grid.Column="2"
                        Background="#c14949"
                        Content="x"
                        FontWeight="Heavy"
                        Click="ExitProgramButton"/>
            </Grid>
        </Grid>
        <ListBox Grid.Row="1"  Grid.Column="1" ItemsSource="{Binding StoredPrograms}" SelectedItem="{Binding SelectedProgram, Mode=TwoWay}" Background="#95000000" Foreground="#E5E5E5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="430" />
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DisplayName}" />
                        <TextBlock Grid.Row="1" Grid.Column="0">
                            <Run Text="Path: " />
                            <Run Text="{Binding Path}" />
                        </TextBlock>
                            
                        <TextBox Grid.Row="0"
                                 Grid.RowSpan="2"
                                 Grid.Column="1" 
                                 Height="24" 
                                 VerticalAlignment="Center" 
                                 IsReadOnly="True"
                                 ToolTip="Click, then press keyboard-shortcut e.g Alt+1"
                                 Background="#222"
                                 BorderBrush="#222"
                                 Foreground="#e5e5e5"
                                 Text="Shortcut"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"/>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1"  Grid.Column="0" Margin="10" VerticalAlignment="Top" Grid.RowSpan="2">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Add program with path to .exe:" />

            <TextBox Text="{Binding ProgramPath, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                Height="25"
                Background="#222"
                BorderBrush="#000000"
                Foreground="#e5e5e5"/>

            <TextBlock Text="{Binding ErrorMessage, UpdateSourceTrigger=PropertyChanged}"
                       Grid.Row="0"
                       Grid.Column="0"
                       Foreground="#c14949"/>

            <Button Content="Add" Width="100" Margin="0,0,0,5" Click="AddProgramButton"/>
            <Button Content="Delete selected" Width="100" Margin="0,10,0,5" Background="#c14949" Click="DeleteSelectedProgramButton"/>
        </StackPanel>
    </Grid>
</Window>
