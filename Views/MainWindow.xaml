<Window x:Class="WindowManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowManager"
        mc:Ignorable="d"
        Focusable="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="1" ItemsSource="{Binding StoredPrograms}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="{Binding DisplayName}"/>
                        <TextBlock>
                            <Run Text="Path: "/>
                            <Run Text="{Binding Path}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBox Grid.Row="0"
                x:Name="SearchBox"
                Text="{Binding ProgramPath, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,5" Width="200"/>
            <Button Content="Add" Width="100" Margin="0,0,0,5" Click="AddProgramButton"/>
        </StackPanel>
    </Grid>
</Window>
